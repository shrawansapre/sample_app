<% if @feed_items.any? %>
  <div id="masonry-container" class="masonry-container transitions-enabled infinite-scroll clearfix">
<ol class="microposts">
    <%= render partial: 'shared/feed_item', collection: @feed_items %>
  </ol>
  </div>
<% end %>


<script>
$(function(){  
  $('#masonry-container').masonry({
    itemSelector: '.box',
    columnWidth: 150,
    gutterWidth: 20,
    isAnimated: true,
    isFitWidth: false
  });

});
</script>
